{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "declaration": true,

        "noEmitOnError": true,

        "strict": true,

        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "./src/**/*"
    ]
}
